{
  "name": "Flutter Web Builder",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/dart:1": {},
    "ghcr.io/devcontainers/features/flutter:1": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.flutter",
        "dart-code.dart-code"
      ]
    }
  },
  "forwardPorts": [5000, 3000],
  "postCreateCommand": "chmod +x compile_and_deploy.sh && ./compile_and_deploy.sh",
  "remoteUser": "vscode"
}